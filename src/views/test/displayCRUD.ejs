<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>get CRUD</title>
</head>
<style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }
    
    td, th {
      border: 1px solid #dddddd;
      text-align: left;
      padding: 8px;
    }
    
    tr:nth-child(even) {
      background-color: #dddddd;
    }
    a{
        display: inline-block;
        text-decoration: none;
        color: none;
    }
    </style>
<body>
    <table>
        <thead>
          <th>Email</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Address</th>
          <th>Action</th>
        </thead>
        <tbody>
          <% if (dataTable && dataTable.length > 0) { %>
          <% for(let i = 0; i < dataTable.length; i++){%>
            <tr>
                <th><%= dataTable[i].email %></th>
                <th><%= dataTable[i].firstName %></th>
                <th><%= dataTable[i].lastName %></th>
                <th><%= dataTable[i].address %></th>
                <th>
                    <a href="/edit-crud?id=<%= dataTable[i].id%>" class="btn-edit" type="button">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id%>" class="btn-delete" type="button">Delete</a>
                </th>
            </tr>
          <%}%>
          <% } else { %>
            <p>No data available</p>
          <% } %>
        </tbody>
      </table>
</body>
</html>